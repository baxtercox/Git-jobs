<section class="container">
        <div class="row">
            <div class="col-md-4 my-2 mx-auto">
                <button class="btn btn-submit py-3 px-5 mx-auto" data-toggle="modal" data-target="#exampleModalCenter"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                        viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round"
                        stroke-linejoin="round" class="feather feather-plus-circle">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="16"></line>
                        <line x1="8" y1="12" x2="16" y2="12"></line>
                    </svg> &nbsp;add an application</button>
        </div>
    </div>
</section>
    {{!-- Cards --}}
    <section class="container">
        <div class="container">
            <div class="row row-cols-1 row-cols-md-4" >
                {{#each applications}}
                <div class="col mx-auto my-3" data-aos="flip-left" data-aos-duration="1000">
                    <div class="card user">
                    <div class="user-data">
                        <h2 class="mb-2">{{dataValues.jobName}}</h2>
                        <a href="{{dataValues.jobLink}}">{{dataValues.jobCompany}}</a>
                        <a href="mailto:{{dataValues.jobHiringMgrEmail}}">POC: {{dataValues.jobHiringMgrName}}</a>
                        <div class="user-designation">{{dataValues.jobStatus}}</div>
                    </div>
                    <div class="user-controls">
                        <a class="add addApp" href="#"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                            viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round"
                            stroke-linejoin="round" class="feather feather-plus-circle">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="8" x2="12" y2="16"></line>
                            <line x1="8" y1="12" x2="16" y2="12"></line>
                        </svg></a>
                        <a class="delete deleteApp"  href="#" data-id="{{dataValues.id}}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                            viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round"
                            stroke-linejoin="round" class="feather feather-trash-2">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            <line x1="10" y1="11" x2="10" y2="17"></line>
                            <line x1="14" y1="11" x2="14" y2="17"></line>
                        </svg></a>
                        <a class="update updateApp" href="#"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                            viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round"
                            stroke-linejoin="round" class="feather feather-edit">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                        </svg></a>

                    </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    <section id="add" class="container my-5">
        {{!-- <!-- Modal --> --}}
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title mx-5 text-center" id="exampleModalLongTitle">Save a new application to your Job Board using the form below!</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{!-- Form --}}
                <div class="form-wrap">
                <form action="/api/applications" id="addApplicationForm" method="POST">
                    <div class="row mx-auto">
                        <div class="col-md-6 input-group my-2">
                        <input type="text" name="jobName" id="jobName" class="input-box" placeholder="Name/Title of the position"
                                maxlength="100" value={{jobName}}>
                        </div>
                        <div class="col-md-6 input-group my-2">
                        <input type="text" name="jobCompany" id="jobCompany" class="input-box" placeholder="Name of the company"
                        maxlength="100" value={{jobCompany}}>
                        </div>

                    </div>
                    <div class="row mx-auto">
                        <div class="col-md-6 input-group my-2">
                        <input type="text" name="jobSalary" id="jobSalary" class="input-box" placeholder="Anticipated salary"
                        maxlength="100" value={{jobSalary}}>
                        </div>
                        <div class="col-md-6 input-group my-2">
                        <input type="text" name="jobHiringMgrName" id="jobHiringMgrName" class="input-box" placeholder="Hiring manager's name"
                        maxlength="100" value={{jobHiringMgrName}}>
                        </div>
                    </div>
                    <div class="row mx-auto">
                        <div class="col-md-6 input-group my-2">
                        <input type="text" name="jobHiringMgrTitle" id="jobHiringMgrTitle" class="input-box" placeholder="Hiring manager's title"
                        maxlength="100" value={{jobHiringMgrTitle}}>
                        </div>
                        <div class="col-md-6 input-group my-2">
                        <input type="text" name="jobHiringMgrEmail" id="jobHiringMgrEmail" class="input-box" placeholder="Hiring manager's email"
                        maxlength="100" value={{jobHiringMgrEmail}}>
                        </div>
                    </div>
                    <div class="row mx-auto">
                        <div class="col-md-6 input-group my-2">
                        <input type="text" name="jobStatus" id="jobStatus" class="input-box" placeholder="Status of the application"
                        maxlength="100" value={{jobStatus}}>
                        </div>
                        <div class="col-md-6 input-group my-2">
                        <input type="text" name="jobNextStep" id="jobNextStep" class="input-box" placeholder="Next step"
                        maxlength="100" value={{jobNextStep}}>
                        </div>
                    </div>
                    <div class="row mx-auto">
                        <div class="col-md-6 input-group my-2">
                        
                        <input type="text" name="jobLink" id="jobLink" class="input-box" placeholder="Link to the posting"
                            maxlength="100" value={{jobLink}}>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" id="addAppBtn" value="Save Application" class="btn btn-submit btn-reverse my-5">
                    </div>
                </form>
            </div>
            </div>
            </div>
        </div>
        </div>
    </section>
